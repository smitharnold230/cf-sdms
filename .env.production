# Production Environment Configuration
# Copy to .env.local for development

# Database and Storage (set in wrangler.toml after resource creation)
# DB_ID=your-d1-database-id
# KV_NAMESPACE_ID=your-kv-namespace-id
# R2_BUCKET_NAME=student-certificates

# JWT Configuration (set as Worker secrets)
# JWT_SECRET=generate-strong-random-key-256-bits
JWT_ALG=HS256
TOKEN_TTL_SECONDS=3600

# Email Service Configuration (SendGrid)
# SENDGRID_API_KEY=your-sendgrid-api-key
SENDGRID_FROM_EMAIL=noreply@sdms.workers.dev
SENDGRID_FROM_NAME=Student Development Management System

# SMS Service Configuration (Twilio)
# TWILIO_ACCOUNT_SID=your-twilio-account-sid
# TWILIO_AUTH_TOKEN=your-twilio-auth-token
TWILIO_FROM_NUMBER=+1234567890

# Virus Scanning Service (VirusTotal API)
# VIRUS_SCAN_API_KEY=your-virustotal-api-key
VIRUS_SCAN_ENABLED=true
VIRUS_SCAN_TIMEOUT=30000

# Application Configuration
APP_BASE_URL=https://sdms.workers.dev
ENVIRONMENT=production
LOG_LEVEL=info

# Optional Monitoring and Analytics
# ANALYTICS_TOKEN=your-analytics-token
# ALERT_WEBHOOK_URL=your-webhook-url

# Rate Limiting Configuration
RATE_LIMIT_ENABLED=true
RATE_LIMIT_WINDOW_MS=900000
RATE_LIMIT_MAX_REQUESTS=100

# File Upload Configuration
MAX_FILE_SIZE_MB=10
ALLOWED_FILE_TYPES=pdf,jpg,jpeg,png