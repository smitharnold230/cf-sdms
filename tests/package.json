{
  "name": "notification-system-tests",
  "version": "1.0.0",
  "description": "Unit tests for the notification system",
  "scripts": {
    "test": "jest",
    "test:watch": "jest --watch",
    "test:coverage": "jest --coverage"
  },
  "devDependencies": {
    "@types/node": "^20.0.0",
    "jest": "^29.0.0",
    "typescript": "^5.0.0"
  },
  "jest": {
    "testEnvironment": "node",
    "testMatch": ["**/*.test.js"],
    "collectCoverageFrom": [
      "../src/**/*.{js,ts}",
      "!../src/**/*.d.ts"
    ]
  }
}